#include <iostream>

#include <cassert>

#include "ecListFuncs.h"

using namespace std;


int lastIndexOf(ListType list, int val) {
    if(list == NULL){
        return -1;
    }
    
    int index = -1;
    int flag = -1;
    while(list != NULL){
        flag++;
        int number = list -> data;
        if(number == val){
            index = flag;
        }
        list = list -> next;
    }
    return index;
}



void removeFollowingEvens(ListType &list) {
    ListType  head = list;
    if(list == NULL){
        return;
    }
    ListType  pre = NULL;
    while(head != NULL){
        pre = head;
        head = head -> next;
        if(pre -> data % 2 == 0){
            while(head != NULL && head -> data % 2 == 0){
            
                pre -> next = head -> next;
                head = head -> next;
            }
        
        }
    
    }

}



void mirrorList(ListType & list) {
    if(list == NULL){
        return;
    }
    ListType  head = list;
    ListType  newList = NULL;
    insertFront(newList, head-> data);
    while(head->next != NULL){
        int  num = head -> data;
        insertFront(newList, num);
        head = head -> next;
    }
    head -> next = newList;

}



void rotateRight(ListType &list, int k) {
    
    if(list == NULL || k <= 0){
        return;
    }
    
    ListType head = list;
    int length = 0;
    while(head!=NULL){
      length++;
        head = head -> next;
    }
    if(k >= length){
        return;
    }
    head = list;
    int flag = length - k;
    int index = 0;
    while(head != NULL){
        index++;
        if(index == flag){
	  ListType node = head;
	  while(head -> next != NULL){
	    head = head -> next;
          }
            head ->next  = list;
	    list = node -> next;
            node->next =NULL;
	    break;
        }
        head = head->next;
    }
}

























